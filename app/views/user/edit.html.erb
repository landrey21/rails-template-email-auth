<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for @user, url: '/user/edit', method: :post, html: { id: 'user-edit-form', class: 'form-horizontal form-custom' } do |f| %>

        <div class="row" style="border-bottom: 1px solid #e5e5e5; margin-bottom: 20px;">
          <div class="col-md-12">
            <h3>Update Profile</h3>
          </div>
        </div>
 
        <div class="form-group row">
          <label for="email" class="col-md-3 control-label">Email</label>
          <div class="col-md-9">
	  <p class="form-control-static"><%= @user.email %> (<%= link_to 'Change Email', '/user/change_email/' %>)</p>
          </div>
        </div>
        <div class="form-group row">
          <label for="name" class="col-md-3 control-label" for="name">Name</label>
          <div class="col-md-8">
            <input type="text" class="form-control" id="name" name="name" placeholder="Name" required value="<%= @user.name %>"/>
          </div>
        </div>
          
        <div class="form-group row">
          <div class="col-md-12">
            <a class="btn btn-lg btn-default pull-right" href="/">Close</a>
            <input class="btn btn-lg btn-primary pull-right" style="margin-right: 10px;" type="submit" name="update" value="Update"/>
          </div>
        </div>
          
      <% end %>
    </div>
  </div>
</div><!-- container -->
<div style="clear: both;"></div>

<script type="text/javascript">
  $("#user-edit-form").validate({
    rules: {
      name: {
        required: true
      },
    }
  });
  $("#name").focus();
</script>

