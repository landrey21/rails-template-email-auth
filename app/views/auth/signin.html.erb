<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <%= form_for @user, url: '/auth/signin', method: :post, html: { id: 'auth-signin-form', class: "form form-custom" } do |f| %>
        <div class="row">
          <div class="col-md-12">
            <h2>Sign In</h2>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-12">
            <label class="sr-only" for="email">Email</label>
            <input class="form-control" type="text" name="email" id="email" tabindex="1" placeholder="Email" required/>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-12">
            <label class="sr-only" for="password">Password</label>
            <input class="form-control" type="password" name="password" id="password" tabindex="2" placeholder="Password" required/>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-12">
            <input class="btn btn-lg btn-primary pull-right" type="submit" name="submit" value="Sign In"/>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-offset-2 col-sm-10">
            <div class="helper-link">
              <a href="/auth/reset_pw/">Forgot your password?</a>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-offset-2 col-sm-10">
            <div class="helper-link">
              <a href="/user/create/">Don't have an account yet?</a>
            </div>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</div><!-- container -->
<div style="clear: both;"></div>

<script type="text/javascript">
  $("#auth-signin-form").validate({
    rules: {
      email: {
        required: true,
        email: true
      },
      password: {
        required: true
      }
    }
  });
  $("#email").focus();
</script>
